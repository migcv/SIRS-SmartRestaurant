<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pt.ulisboa.tecnico.sirs.smartrestaurant.fragments.DrinksFragment"
    app:layout_collapseParallaxMultiplier="1.0"
    app:layout_scrollFlags="scroll"
    android:baselineAligned="false">

    <!-- TODO: Update blank fragment layout -->


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="?android:attr/colorBackground">

        <TextView
            android:text="Drinks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Burgers"
            android:typeface="normal"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="40sp"
            android:fontFamily="casual"
            android:textColor="?attr/actionModeSplitBackground"
            android:layout_marginLeft="20px" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="50sp">

        <TextView
            android:text="Water - 1.5€ "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/water"
            android:layout_marginTop="30px"
            android:layout_marginLeft="20px"
            android:textStyle="normal|bold"
            android:textSize="20sp"
            android:fontFamily="casual"
            android:layout_weight="1"/>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <Button
                android:text="-"
                android:layout_width="20sp"
                android:layout_height="50sp"
                android:layout_marginLeft="0dp"
                android:id="@+id/waterSubButton"
                android:layout_weight="1"
                android:textSize="20sp"
                android:textAlignment="center" />

            <TextView
                android:text="0"
                android:layout_width="10sp"
                android:layout_height="wrap_content"
                android:id="@+id/waterTextView"
                android:textSize="20sp"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"/>

            <Button
                android:text="+"
                android:layout_width="20sp"
                android:layout_height="50sp"
                android:layout_marginLeft="0dp"
                android:textSize="20sp"
                android:id="@+id/waterAddButton"
                android:layout_weight="1"
                android:textStyle="normal|bold"
                android:textAlignment="center" />

        </TableRow>

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="50sp">

        <TextView
            android:text="Coke - 1.5€ "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/coke"
            android:layout_marginTop="30px"
            android:layout_marginLeft="20px"
            android:textStyle="normal|bold"
            android:textSize="20sp"
            android:fontFamily="casual"
            android:layout_weight="1"/>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <Button
                android:text="-"
                android:layout_width="20sp"
                android:layout_height="50sp"
                android:layout_marginLeft="0dp"
                android:id="@+id/cokeSubButton"
                android:layout_weight="1"
                android:textSize="20sp"
                android:textAlignment="center" />

            <TextView
                android:text="0"
                android:layout_width="10sp"
                android:layout_height="wrap_content"
                android:id="@+id/cokeTextView"
                android:textSize="20sp"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"/>

            <Button
                android:text="+"
                android:layout_width="20sp"
                android:layout_height="50sp"
                android:layout_marginLeft="0dp"
                android:textSize="20sp"
                android:id="@+id/cokeAddButton"
                android:layout_weight="1"
                android:textStyle="normal|bold"
                android:textAlignment="center" />

        </TableRow>

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="50sp">

        <TextView
            android:text="Wine - 1€ "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/wine"
            android:layout_marginTop="30px"
            android:layout_marginLeft="20px"
            android:textStyle="normal|bold"
            android:textSize="20sp"
            android:fontFamily="casual"
            android:layout_weight="1"/>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <Button
                android:text="-"
                android:layout_width="20sp"
                android:layout_height="50sp"
                android:layout_marginLeft="0dp"
                android:id="@+id/wineSubButton"
                android:layout_weight="1"
                android:textSize="20sp"
                android:textAlignment="center" />

            <TextView
                android:text="0"
                android:layout_width="10sp"
                android:layout_height="wrap_content"
                android:id="@+id/wineTextView"
                android:textSize="20sp"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"/>

            <Button
                android:text="+"
                android:layout_width="20sp"
                android:layout_height="50sp"
                android:layout_marginLeft="0dp"
                android:textSize="20sp"
                android:id="@+id/wineAddButton"
                android:layout_weight="1"
                android:textStyle="normal|bold"
                android:textAlignment="center" />

        </TableRow>

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="50sp">

        <TextView
            android:text="Beer(20cl) - 1€"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/beer"
            android:layout_marginTop="30px"
            android:layout_marginLeft="20px"
            android:textStyle="normal|bold"
            android:textSize="20sp"
            android:fontFamily="casual"
            android:layout_weight="1"/>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <Button
                android:text="-"
                android:layout_width="20sp"
                android:layout_height="50sp"
                android:layout_marginLeft="0dp"
                android:id="@+id/beerSubButton"
                android:layout_weight="1"
                android:textSize="20sp"
                android:textAlignment="center" />

            <TextView
                android:text="0"
                android:layout_width="10sp"
                android:layout_height="wrap_content"
                android:id="@+id/beerTextView"
                android:textSize="20sp"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"/>

            <Button
                android:text="+"
                android:layout_width="20sp"
                android:layout_height="50sp"
                android:layout_marginLeft="0dp"
                android:textSize="20sp"
                android:id="@+id/beerAddButton"
                android:layout_weight="1"
                android:textStyle="normal|bold"
                android:textAlignment="center" />

        </TableRow>

    </TableRow>

</TableLayout>

